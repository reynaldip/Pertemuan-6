note : menggunakan for

#include <iostream> // Define iostream
using namespace std; // menggunakan std
int main()
{
     int n;
    cout<<"Masukan jumlah yang diinginkan :";
    cin>>n;

    for(int i=0; i<=n; i++){
        for(int j=0; j<i; j++){
            cout<<"*";
            }
            cout<<endl;
    }
    return 0;
}


note : menggunakan while

#include <iostream> // Define iostream
using namespace std; // menggunakan std
int main()
{
     int batas;
     int i=0;
     int j=0;
     cout << "Batas :";
     cin >> batas;

    while(i<batas){
        j=0;
        while (j<i){
            cout<<"*";
            j++;

    }
    cout<<endl;
    i++;
    }
    return 0;
}
